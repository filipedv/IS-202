@{
    ViewData["Title"] = "Home Page";
}

<!-- Welcome section -->
<div class="text-center mb-4">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <!-- Button to register an obstacle -->
    <a asp-action="DataForm" asp-controller="Obstacle"
       class="btn btn-primary btn-lg mt-3 shadow px-5 py-3 fs-3">
        Register Obstacle
    </a>
</div>

<!-- Responsive Leaflet Map -->
<div class="mb-4 rounded shadow-sm">
    <div id="map" class="w-100" style="height: 60vh; min-height: 300px;"></div>
</div>

@section Scripts {
    <script>
        // Initialize Leaflet map
        var map = L.map('map').setView([59.9139, 10.7461], 13); // Example: Kristiansand

        // Add OpenStreetMap tiles
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        // Ensure map resizes properly on window resize
        window.addEventListener('resize', function() {
            map.invalidateSize();
        });
    </script>
}