<!--Viser startsiden med velkomstmelding, navigasjon og et iteraktivt kart -->
@{
    ViewData["Title"] = "Home Page";
}

    <div class="d-flex justify-content-center gap-5 mt-4">
        <!-- Knapp for å registrere hinder -->
        <a asp-action="DataForm" asp-controller="Obstacle"
           class="btn btn-primary btn-lg btn-sm fs-2">
            Register Obstacle
        </a>

        <!-- Knapp for Overview -->
        <a asp-action="Overview" asp-controller="Obstacle"
           class="btn btn-primary btn-lg btn-sm fs-2">
            Obstacle Overview
        </a>
    </div>


<!-- Responsivt Leaflet Map -->
<div class="mb-2 mt-4 rounded shadow-sm">
    <div id="map" class="w-100" style="height: 60vh; min-height: 300px;"></div>
</div>


@section Scripts {
    <script>
        // Opprett Leaflet-kart
        var map = L.map('map').setView([58.1467, 7.9956], 13); // Kristiansand geografisk sentrum
        
        // Legg til OpenStreetMap-fliser
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        // Sikre at kartet endrer størrelse riktig ved vindusendring
        window.addEventListener('resize', function() {
            map.invalidateSize();
        });
    </script>
}