@model OBLIG1.Controllers.AdminController.AdminUserEditViewModel

@{
    //Setter tittelen som brukes i layouten
    ViewData["Title"] = "Edit user";
}

<div class="container my-4">
    <div class="rounded shadow-sm p-4">

        @* Skjema som sender data til Edit-action i AdminController *@
        <form asp-action="Edit" method="post" novalidate>
            @Html.AntiForgeryToken() @* Beskytter mot CSRF *@
            
            @* Skjult felt som sender med brukerens ID *@
            <input type="hidden" asp-for="Id" />

            @* Viser valideringsfeil som gjelder hele modellen *@
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            @* E-postfelt *@
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            @* Rollevelger (dropdown) *@
            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                
                @*fylles med roller fra viewmodellen*@
                <select asp-for="Role"
                        class="form-select"
                        asp-items="@(new SelectList(Model.AvailableRoles))">
                </select>
                
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3">   @* Passordfelt (valgfritt) *@
                <label asp-for="Password" class="form-label">
                    New password (optional)
                </label>
                @* Hvis feltet er tomt, endres ikke passordet *@
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                
                <div class="form-text">
                    Leave empty if you don't want to change the password.
                </div>
            </div>

            <div class="d-flex gap-2">  @* Knapper for Ã¥ lagre eller avbryte *@
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @* Inkluderer jQuery-valideringsskript for klientsidevalidering *@
    <partial name="_ValidationScriptsPartial" />
}