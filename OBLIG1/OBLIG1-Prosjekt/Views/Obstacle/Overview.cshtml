@using OBLIG1.Models
@model IEnumerable<Obstacle>

@{
    ViewData["Title"] = "Overview";
    var items = (Model ?? Enumerable.Empty<Obstacle>()).ToList();
}

@section Styles {
    <style>
    /* Svevende back-knapp nederst til venstre */
    .floating-back{
      position: fixed;
      left: max(12px, env(safe-area-inset-left));
      bottom: calc(12px + env(safe-area-inset-bottom));
      z-index: 1050; /* over innhold/tabell */
    }

    .floating-back{
        position: fixed;
        left: max(12px, env(safe-area-inset-left));
        bottom: calc(12px + env(safe-area-inset-bottom));
        z-index: 1050;
    }
  </style>
}


@if (!items.Any())
{
    <section class="mx-auto my-4" style="max-width: 720px;">
        <div class="alert alert-info" role="alert">
            There are no obstacles yet. Add an obstacle to see it here.
        </div>
        <a asp-controller="Obstacle" asp-action="DataForm" class="btn btn-primary">
            Register obstacle
        </a>
    </section>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
            <tr>
                <th>Obstacle</th>
                <th>Height (m)</th>
                <th>Draft?</th>
                <th>Registered</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var o in items)
            {
                <tr>
                    <td>@o.Name</td>
                    <td>@(o.Height?.ToString("0.##") ?? "-")</td>
                    <td>@o.RegisteredAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-primary"
                           asp-controller="Obstacle"
                           asp-action="Edit"
                           asp-route-id="@o.Id">Edit</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
    <div class="floating-back">
        <a asp-controller="Home" asp-action="Index"
           class="btn icon-btn btn-secondary" aria-label="Back" title="Back">
            <!-- arrow-left icon -->
            <svg viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M14 7l-5 5 5 5"></path>
                <path d="M20 12H9"></path>
            </svg>
            <span>Back</span>
        </a>
    </div>
    
}