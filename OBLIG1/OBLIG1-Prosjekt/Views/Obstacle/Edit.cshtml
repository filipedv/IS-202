@model OBLIG1.Models.ObstacleEditViewModel
@{
    ViewData["Title"] = "Edit obstacle";
}

@section Styles {
  <style>
    /* Layout */
    .edit-wrap{
      display:grid; gap:18px;
      grid-template-columns: 1fr;
    }
    .edit-card{ background:#fff; border-radius:14px; border:1px solid #e5e7eb; padding:16px; }
    #edit-map{ height: 520px; border-radius:12px; border:1px solid #e5e7eb; }

    /* Knappelinje */
    .map-toolbar{
      display:flex; flex-wrap:wrap; gap:12px; margin-bottom:12px;
    }

    /* Felles stil – matcher “register obstacle”-knappene visuelt */
    .map-btn{
      display:inline-flex; align-items:center; gap:10px;
      padding:14px 18px;
      border-radius:12px; border:1px solid transparent;
      font-weight:600; line-height:1; text-decoration:none;
      transition:transform .04s ease, box-shadow .2s ease, background .2s ease;
      user-select:none;
    }
    .map-btn:active{ transform: translateY(1px); }

    /* Varianter */
    .map-btn.primary {
      background:#3b82f6; color:#fff; border-color:#3b82f6;
      box-shadow: 0 6px 20px rgba(59,130,246,.22);
    }
    .map-btn.secondary {
      background:#eef2f7; color:#1f2937; border-color:#e5e7eb;
    }
    .map-btn.danger {
      background:#fee2e2; color:#991b1b; border-color:#fecaca;
    }

    /* Ikoner */
    .map-btn svg{ width:20px; height:20px; display:block; }

    @@media (min-width: 992px){
      .edit-wrap{ grid-template-columns: 1.25fr 1fr; }
    }
  </style>
}

<div class="container my-4">
  <h2 class="mb-3">@ViewData["Title"]</h2>

  <div class="edit-wrap">
    <!-- VENSTRE: kart + verktøy -->
    <div class="edit-card">
      <div class="map-toolbar">
        <!-- New marker -->
        <button type="button" id="btn-marker" class="map-btn primary" aria-label="New marker" title="New marker">
          <!-- pin icon -->
          <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7zm0 9.5a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5z"/>
          </svg>
          <span>New marker</span>
        </button>

        <!-- New line -->
        <button type="button" id="btn-line" class="map-btn primary" aria-label="New line" title="New line">
          <!-- polyline icon -->
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <polyline points="4,16 9,8 15,12 20,6"/>
            <circle cx="4" cy="16" r="2" fill="currentColor"/>
            <circle cx="9" cy="8" r="2"  fill="currentColor"/>
            <circle cx="15" cy="12" r="2" fill="currentColor"/>
            <circle cx="20" cy="6" r="2"  fill="currentColor"/>
          </svg>
          <span>New line</span>
        </button>

        <!-- Edit -->
        <button type="button" id="btn-edit" class="map-btn secondary" aria-label="Edit geometry" title="Edit">
          <!-- pencil icon -->
          <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zm14.71-9.04c.39-.39.39-1.02 0-1.41l-2.12-2.12a.9959.9959 0 0 0-1.41 0l-1.83 1.83 3.75 3.75 1.61-1.61z"/>
          </svg>
          <span>Edit</span>
        </button>

        <!-- Delete -->
        <button type="button" id="btn-clear" class="map-btn danger" aria-label="Delete" title="Delete">
          <!-- trash icon -->
          <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M9 3h6l1 2h4v2H4V5h4l1-2zm1 6h2v9h-2V9zm4 0h2v9h-2V9zM6 9h2v9H6V9z"/>
          </svg>
          <span>Delete</span>
        </button>
      </div>

      <div id="edit-map"></div>
    </div>

    <!-- HØYRE: skjema -->
    <div class="edit-card">
      <form asp-action="Edit" method="post" id="editForm" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="GeometryGeoJson" id="GeometryGeoJson" />

        <div class="mb-3">
          <label asp-for="Name" class="form-label"></label>
          <input asp-for="Name" class="form-control" />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Type" class="form-label"></label>
          <select asp-for="Type" asp-items="Model.TypeOptions" class="form-select"></select>
          <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="HeightFt" class="form-label"></label>
          <div class="input-group">
            <input asp-for="HeightFt" class="form-control" type="number" min="0" step="1" />
            <span class="input-group-text">ft</span>
          </div>
          <div class="form-text">
            ≈ <span id="heightMeters">0</span> m
          </div>
          <span asp-validation-for="HeightFt" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Description" class="form-label"></label>
          <textarea asp-for="Description" class="form-control" rows="4"></textarea>
          <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
          <input class="form-check-input" asp-for="IsDraft" type="checkbox" />
          <label class="form-check-label" asp-for="IsDraft"></label>
        </div>

        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">Save</button>
          <a asp-action="Overview" class="btn btn-outline-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />

  
  <!-- Leaflet + Leaflet.Draw -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="anonymous" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.css" />
  <script src="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.js"></script>

  <script>
    // --- Kart ---
    const map = L.map('edit-map');
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 19, attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    const drawnItems = new L.FeatureGroup().addTo(map);

    // Last eksisterende GeoJSON
    const existing = @Html.Raw(string.IsNullOrWhiteSpace(Model.GeometryGeoJson) ? "null" : Model.GeometryGeoJson);
    if (existing) {
      const layer = L.geoJSON(existing, {
        onEachFeature: (_, lyr) => drawnItems.addLayer(lyr)
      }).addTo(map);
      try {
        const b = layer.getBounds();
        if (b.isValid()) map.fitBounds(b.pad(0.2)); else map.setView([59.9139, 10.7461], 13);
      } catch { map.setView([59.9139, 10.7461], 13); }
    } else {
      map.setView([59.9139, 10.7461], 13);
    }

    // Draw-handlers
    const drawMarker = new L.Draw.Marker(map, { icon: new L.Icon.Default() });
    const drawPolyline = new L.Draw.Polyline(map, { shapeOptions: { color: '#2563eb', weight: 4 } });

    let editToolbar = null, deleteToolbar = null;
    function disableModes(){
      if (editToolbar)   { editToolbar.disable();   editToolbar = null; }
      if (deleteToolbar) { deleteToolbar.disable(); deleteToolbar = null; }
    }

    // Hendelser
    map.on(L.Draw.Event.CREATED, e => {
      drawnItems.addLayer(e.layer);
      syncGeo();
    });
    map.on('draw:edited',  syncGeo);
    map.on('draw:deleted', syncGeo);

    function syncGeo(){
      const fc = drawnItems.toGeoJSON();
      document.getElementById('GeometryGeoJson').value = JSON.stringify(fc);
      setTimeout(()=> map.invalidateSize(), 50);
    }

    // Knapp-handlers
    document.getElementById('btn-marker').addEventListener('click', () => {
      disableModes(); drawMarker.enable();
    });
    document.getElementById('btn-line').addEventListener('click', () => {
      disableModes(); drawPolyline.enable();
    });
    document.getElementById('btn-edit').addEventListener('click', () => {
      disableModes();
      editToolbar = new L.EditToolbar.Edit(map, { featureGroup: drawnItems });
      editToolbar.enable();
    });
    document.getElementById('btn-clear').addEventListener('click', () => {
      disableModes(); drawnItems.clearLayers(); syncGeo();
    });

    // Før submit: sørg for at GeoJSON er oppdatert
    document.getElementById('editForm').addEventListener('submit', syncGeo);

    // Live konvertering ft -> m i UI
    function ftToM(ft){ return (ft / 3.28084); }
    const ftInput = document.getElementById('HeightFt');
    const mOut = document.getElementById('heightMeters');
    function updateMeters(){
      const v = parseFloat(ftInput?.value);
      if (isNaN(v)) { mOut.textContent = "0"; return; }
      mOut.textContent = ftToM(v).toFixed(2);
    }
    if (ftInput){ updateMeters(); ftInput.addEventListener('input', updateMeters); }

    // Reflow ved resize
    window.addEventListener('resize', () => map.invalidateSize());
  </script>
}
