@model OBLIG1.Models.ObstacleData
@{
    // Tittel som vises i layouten
    ViewData["Title"] = "Register Obstacle";
    // Flag som layouten kan bruke til å skjule global header/footer (fullskjerm-kart)
    ViewData["HideChrome"] = true; // skjul global header/footer for fullskjerm-kart
}

@section Styles {
  <style>
    /* Kun for denne siden */
    .page-actions-bar{
      display:flex; flex-wrap:wrap; gap:12px; justify-content:center; align-items:center;
    }
    .icon-btn{
      display:inline-flex; align-items:center; gap:10px;
      padding:16px 24px; min-height:64px; min-width:220px;
      border-radius:14px; font-size:1.125rem; line-height:1.2; border:none;
    }
    .icon-btn svg{ width:22px; height:22px; display:block; }
    .icon-btn .label{ display:inline-block; }

    /* Viktig i .cshtml: bruk @@media (escape Razor) */
    @@media (max-width: 420px){
      .icon-btn{ min-width:160px; padding:14px 18px; font-size:1rem; }
    }
  </style>
}


<!-- Kart som fyller siden (plassen for handlingsfooter reserveres av .with-action-footer) -->

<div class="with-action-footer">
  <div class="rounded shadow-sm">
    @* Kartcontainer – Leaflet initialiseres på dette elementet *@
    <div id="map" class="form-map w-100"></div>
  </div>

  
  <!-- Skjult form – sender GeoJSON tilbake til server -->
  <form asp-action="DataForm" method="post" id="obstacleForm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="GeometryGeoJson" id="GeometryGeoJson" />
  </form>
</div>

@section PageFooter {
  @* Handlingsfelt nederst på siden (tilbake, tegneverktøy, slett, send inn) *@
  <div class="page-actions-bar">

    
    @* Tilbake til Home/Index *@
    <a asp-controller="Home" asp-action="Index"
       class="btn icon-btn btn-secondary" aria-label="Back" title="Back">
      <!-- arrow-left icon -->
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
           stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M14 7l-5 5 5 5"></path>
        <path d="M20 12H9"></path>
      </svg>
      <span class="label">Back</span>
    </a>

    
    <!-- POINT -->
    <button type="button" class="btn icon-btn btn-primary" id="btn-marker" aria-label="Point" title="Point">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7zm0 9.5a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5z"/>
      </svg>
      <span class="label">Point</span>
    </button>

    
    <!-- LINE -->
    <button type="button" class="btn icon-btn btn-primary" id="btn-line" aria-label="Line" title="Line">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <polyline points="4,16 9,8 15,12 20,6"/>
        <circle cx="4" cy="16" r="2" fill="currentColor"/>
        <circle cx="9" cy="8" r="2"  fill="currentColor"/>
        <circle cx="15" cy="12" r="2" fill="currentColor"/>
        <circle cx="20" cy="6" r="2"  fill="currentColor"/>
      </svg>
      <span class="label">Line</span>
    </button>

    
    <!-- DELETE (uendret stil) -->
    <button type="button" class="btn icon-btn btn-secondary" id="btn-delete" aria-label="Delete" title="Delete">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M9 3h6l1 2h4v2H4V5h4l1-2zm1 6h2v9h-2V9zm4 0h2v9h-2V9zM6 9h2v9H6V9z"/>
      </svg>
      <span class="label">Delete</span>
    </button>

    
    <!-- SUBMIT -->
    <button type="button" class="btn icon-btn btn-primary" id="btn-submit" aria-label="Submit" title="Submit">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M9 16.17 4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
      </svg>
      <span class="label">Submit</span>
    </button>

  </div>
}

@section Scripts {
  <!-- Leaflet + Leaflet.Draw (kun det vi trenger) -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="anonymous" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.css" />
  <script src="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.js"></script>

  <script>
    // --- Minimal ny-registrering: bare tegn marker/linje, slett alt, send ---
    const map = L.map('map').setView([58.1467, 7.9956], 13);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // Samler geometri her (uten edit/delete modes)
    const drawnItems = new L.FeatureGroup();
    map.addLayer(drawnItems);

    // Tegneverktøy vi tillater
    const drawMarker   = new L.Draw.Marker(map, { icon: new L.Icon.Default() });
    const drawPolyline = new L.Draw.Polyline(map, { shapeOptions: { color: '#2563eb', weight: 4 } });

    // Når noe er tegnet: legg til i collection og sync skjult felt
    map.on(L.Draw.Event.CREATED, function (e) {
      drawnItems.addLayer(e.layer);
      syncGeo();
    });

    // Aktiver marker-tegning når "Point"-knappen trykkes
    document.getElementById('btn-marker').addEventListener('click', () => {
      drawMarker.enable();
    });
    // Aktiver linje-tegning når "Line"-knappen trykkes
    document.getElementById('btn-line').addEventListener('click', () => {
      drawPolyline.enable();
    });
    // Slett alle objekter som er tegnet på kartet
    document.getElementById('btn-delete').addEventListener('click', () => { // Fikset submit knapp
      drawnItems.clearLayers();
      syncGeo();
    });
    // Ved submit: sjekk at vi faktisk har geometri, synkroniser GeoJSON og send skjema
    document.getElementById('btn-submit').addEventListener('click', () => {
      if (!hasAnyGeometry()) {
        alert('Add at least one point or line before finishing');
        return;
      }
      syncGeo();
      document.getElementById('obstacleForm').submit();
    });

    // Sjekk om det finnes minst ett lag i FeatureGroup
    function hasAnyGeometry(){
      return Object.keys(drawnItems._layers).length > 0;
    }
    // Konverterer alle lag til GeoJSON FeatureCollection og legger dette som tekst i det skjulte input-feltet
    function syncGeo() {
      const fc = drawnItems.toGeoJSON();
      document.getElementById('GeometryGeoJson').value = JSON.stringify(fc);
    }

    // Sørger for at kartet re-rendres riktig når vinduet endrer størrelse
    window.addEventListener('resize', () => map.invalidateSize());
  </script>
}
