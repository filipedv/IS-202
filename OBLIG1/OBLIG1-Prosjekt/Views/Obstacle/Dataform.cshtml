@model OBLIG1.Models.ObstacleData
@{
    ViewData["Title"] = "Register Obstacle";
    ViewData["HideChrome"] = true; // Skjul global header/footer
}

<!-- Kart som fyller siden (plassen for footeren reserveres av .with-action-footer) -->
<div class="with-action-footer">
    <div class="rounded shadow-sm">
        <div id="map" class="form-map w-100"></div>
    </div>

    <!-- Skjult form – sender GeoJSON tilbake til serveren -->
    <form asp-action="DataForm" method="post" id="obstacleForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="GeometryGeoJson" id="GeometryGeoJson" />
    </form>
</div>

@section PageFooter {
  <!-- Viktig: bruk page-actions-bar for fleksibel wrapping -->
  <div class="page-actions-bar">
    <button type="button" class="btn icon-btn btn-primary" id="btn-marker" aria-label="Marker" title="Marker">
      <!-- marker -->
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7zm0 9.5a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5z"/>
      </svg>
      <span class="visually-hidden">Marker</span>
    </button>

    <button type="button" class="btn icon-btn btn-primary" id="btn-line" aria-label="Polyline" title="Polyline">
      <!-- polyline -->
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <polyline points="4,16 9,8 15,12 20,6"/>
        <circle cx="4" cy="16" r="2" fill="currentColor"/>
        <circle cx="9" cy="8" r="2"  fill="currentColor"/>
        <circle cx="15" cy="12" r="2" fill="currentColor"/>
        <circle cx="20" cy="6" r="2"  fill="currentColor"/>
      </svg>
      <span class="visually-hidden">Polyline</span>
    </button>

    <button type="button" class="btn icon-btn btn-primary" id="btn-rect" aria-label="Rectangle" title="Rectangle">
      <!-- rectangle -->
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <rect x="4" y="6" width="16" height="12" rx="2" ry="2"/>
      </svg>
      <span class="visually-hidden">Rectangle</span>
    </button>

    <button type="button" class="btn icon-btn btn-secondary" id="btn-edit" aria-label="Edit" title="Edit">
      <!-- pencil -->
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04a1.003 1.003 0 0 0 0-1.42l-2.34-2.34a1.003 1.003 0 0 0-1.42 0l-1.83 1.83 3.75 3.75 1.84-1.82z"/>
      </svg>
      <span class="visually-hidden">Edit</span>
    </button>

    <button type="button" class="btn icon-btn btn-secondary" id="btn-delete" aria-label="Delete" title="Delete">
      <!-- trash -->
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M9 3h6l1 2h4v2H4V5h4l1-2zm1 6h2v9h-2V9zm4 0h2v9h-2V9zM6 9h2v9H6V9z"/>
      </svg>
      <span class="visually-hidden">Delete</span>
    </button>

    <button type="button" class="btn icon-btn btn-primary" id="btn-submit" aria-label="Submit" title="Submit">
      <!-- check -->
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M9 16.17 4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
      </svg>
      <span class="visually-hidden">Submit</span>
    </button>
  </div>
}

@section Scripts {
  <!-- Leaflet + Leaflet.Draw -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="anonymous" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.css" />
  <script src="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.js"></script>

  <script>
    // 1) Init kart
    const map = L.map('map').setView([58.1467, 7.9956], 13); //Kristiansand koordinater

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // 2) Samle geometri her
    const drawnItems = new L.FeatureGroup();
    map.addLayer(drawnItems);

    // 3) Ingen standard Leaflet.Draw-toolbar

    // 4) Egne draw-handlers
    const drawMarker = new L.Draw.Marker(map, { icon: new L.Icon.Default() });
    const drawPolyline = new L.Draw.Polyline(map, {
      shapeOptions: { color: '#2563eb', weight: 4 }
    });
    const drawRectangle = new L.Draw.Rectangle(map, {
      shapeOptions: { color: '#2563eb', weight: 2, fillOpacity: 0.15 }
    });

    // 5) Hendelser for opprett/endre/slette
    map.on(L.Draw.Event.CREATED, function (e) {
      drawnItems.addLayer(e.layer);
      syncGeo();
    });
    map.on('draw:edited',  syncGeo);
    map.on('draw:deleted', syncGeo);

    // 6) Edit/Delete modes
    let editToolbar  = null;
    let deleteToolbar = null;
    function enableEditMode() {
      if (editToolbar) editToolbar.disable();
      editToolbar = new L.EditToolbar.Edit(map, { featureGroup: drawnItems });
      editToolbar.enable();
    }
    function enableDeleteMode() {
      if (deleteToolbar) deleteToolbar.disable();
      deleteToolbar = new L.EditToolbar.Delete(map, { featureGroup: drawnItems });
      deleteToolbar.enable();
    }
    function disableEditDelete() {
      if (editToolbar)   { editToolbar.disable();   editToolbar = null; }
      if (deleteToolbar) { deleteToolbar.disable(); deleteToolbar = null; }
    }

    // 7) Footer-knapper
    document.getElementById('btn-marker').addEventListener('click', () => {
      disableEditDelete(); drawMarker.enable();
    });
    document.getElementById('btn-line').addEventListener('click', () => {
      disableEditDelete(); drawPolyline.enable();
    });
    document.getElementById('btn-rect').addEventListener('click', () => {
      disableEditDelete(); drawRectangle.enable();
    });
    document.getElementById('btn-edit').addEventListener('click', () => {
      disableEditDelete(); enableEditMode();
    });
    document.getElementById('btn-delete').addEventListener('click', () => {
      disableEditDelete(); enableDeleteMode();
    });
    document.getElementById('btn-submit').addEventListener('click', () => {
      syncGeo();
      document.getElementById('obstacleForm').submit();
    });

    // 8) Sync til hidden felt – lagrer FeatureCollection
    function syncGeo() {
      const fc = drawnItems.toGeoJSON();
      document.getElementById('GeometryGeoJson').value = JSON.stringify(fc);
    }

    // 9) Reflow ved resize
    window.addEventListener('resize', () => map.invalidateSize());
  </script>
}
