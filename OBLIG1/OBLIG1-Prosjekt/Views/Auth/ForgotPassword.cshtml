@{
    ViewData["Title"] = "Forgot Password";
}

<div class="hero">
    <div class="login-card">
        <h2>Forgot Password</h2>
        <p class="muted">Enter your email address, and weâ€™ll send you a link to reset your password.</p>

        <form asp-action="ForgotPassword" method="post">
            <div class="field">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required />
            </div>

            <button type="submit" class="btn-primary btn-block">Send Reset Link</button>

            @if (ViewBag.Message != null)
            {
                <p style="color: green; margin-top: 10px;">@ViewBag.Message</p>
            }

            <div class="text-center" style="margin-top:12px;">
                <a asp-controller="Auth" asp-action="Index" class="text-muted">Back to Login</a>
            </div>
        </form>
    </div>
</div>