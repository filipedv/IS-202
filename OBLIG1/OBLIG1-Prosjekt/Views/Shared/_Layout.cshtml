@*
  _Layout.cshtml
  - Global layout med fleksibel høyde
  - Støtter side-spesifikk footer via @section PageFooter
  - Dynamisk reservering av plass nederst gjennom --action-footer-space
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OBLIG1-Prosjekt</title>

    <!-- Tailwind først -->
    <script src="https://cdn.tailwindcss.com"></script>

    @RenderSection("Styles", required: false)

    <!-- Deretter Bootstrap (for komponenter/utility-klasser) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Eget stilark -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OBLIG1-Prosjekt.styles.css" asp-append-version="true" />

    <!-- Leaflet base CSS (Draw-assets lastes i de sidene som trenger det) -->
    <link rel="stylesheet"
          href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="anonymous" />
</head>

<body class="page-fullscreen d-flex flex-column min-vh-100" style="margin:0;">

    @* Main-innhold *@
    <main id="main" role="main"
          class="flex-fill w-100 p-0 pb-3"
          style="min-height:0;">
        @RenderBody()
    </main>

    @* Side-spesifikk, flytende footer for actions (vises kun hvis siden definerer @section PageFooter) *@
    @if (IsSectionDefined("PageFooter"))
    {
        <footer class="page-actions" role="contentinfo">
            @RenderSection("PageFooter", required: false)
        </footer>
    }

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Leaflet base JS (Leaflet.Draw lastes på de sidene som trenger det) -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin="anonymous"></script>

    @* Dynamisk reservering av plass nederst til .page-actions (og tving reflow av kart) *@
    <script>
        (function () {
            const root = document.documentElement;

            function updateFooterSpace() {
                const footer = document.querySelector('.page-actions');
                if (!footer) return;

                // +16px buffer for skygge/luft
                const h = Math.ceil(footer.offsetHeight + 16);
                root.style.setProperty('--action-footer-space', h + 'px');

                // Sørg for at Leaflet reflow'er hvis kart finnes
                if (window.dispatchEvent) window.dispatchEvent(new Event('resize'));
            }

            window.addEventListener('load', updateFooterSpace);
            window.addEventListener('resize', updateFooterSpace);

            // Følg endringer i footer-høyden (wrap, font, etc.)
            const ro = new ResizeObserver(updateFooterSpace);
            const footerEl = document.querySelector('.page-actions');
            if (footerEl) ro.observe(footerEl);
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
